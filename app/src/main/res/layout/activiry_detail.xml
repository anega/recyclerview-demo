<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/container_colored_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/div_center" />

    <TextView
        style="@style/Text.Primary"
        android:id="@+id/tv_date_time_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/div_center"
        tools:text="2:43AM 05/3/2018" />

    <View
        android:id="@+id/div_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true" />

    <TextView
        style="@style/Text.Secondary"
        android:id="@+id/tv_message_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/div_center"
        tools:text="Check out content like Fragmented podcast to expose the knowledge, ideas, and opinions of experts." />

</RelativeLayout>